{
    "name": "alareqi/filament-translatable-fields",
    "description": "This package adds a way to interact with alareqi/translatable-fields in Filament.",
    "homepage": "https://github.com/aymanalareqi/filament-translatable-fields",
    "license": "MIT",
    "authors": [
        {
            "name": "Alareqi",
            "email": "ayman.a.alareqi@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "laravel/framework": "^10.0|^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-translatable": "^6.6"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Alareqi\\FilamentTranslatableFields\\": "src/"
        },
        "files": [
            "src\\Helpers\\helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Alareqi\\FilamentTranslatableFields\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Alareqi\\FilamentTranslatableFields\\FilamentTranslatableFieldsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "verify-v4": "php verify-filament-v4.php"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}